<% form_url ||= self.send("#{params[:controller]}_#{params[:action].gsub('_form', '_perform')}_path", encode_method(params[:method]), params[:option]) %>
<h1><%= params[:controller].humanize %> - <%= params[:action].humanize %> - <%= params[:method].humanize %></h1>

<%= form_tag(form_url) do %>
  <%= render @partial || 'shared/simple_input' %>
  <div class="actions">
    <%= submit_tag "Submit" %>
  </div>
<% end %>