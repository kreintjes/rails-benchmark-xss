<h1><%= params[:controller].humanize %> - <%= params[:action].humanize %> - <%= params[:method].humanize %></h1>

<%= form_tag(text_helper_test_helpers_perform_path(encode_method(params[:method]), params[:option])) do %>
  <div class="field">
    <%= label_tag :text %>
    <%= text_area_tag :text %>
  </div>
  <%= render @partial if @partial.present? %>
  <div class="actions">
    <%= submit_tag "Submit" %>
  </div>
<% end %>